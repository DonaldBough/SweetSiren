<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:onClick="hideKeyboard"
    android:id="@+id/fragment_settings"
    tools:context="edu.purdue.dbough.sweetsignal.SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact"
        android:textSize="18dp"
        android:id="@+id/contactTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contactField"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/contactTextView"
        android:layout_alignLeft="@+id/contactTextView"
        android:layout_alignStart="@+id/contactTextView"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/addContactButton"
        android:layout_alignBottom="@+id/contactField"
        android:layout_toRightOf="@+id/contactField"
        android:layout_toEndOf="@+id/contactField"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Text"
        android:id="@+id/contactView"
        android:layout_below="@+id/contactField"
        android:layout_alignLeft="@+id/contactField"
        android:layout_alignStart="@+id/contactField"
        android:layout_toLeftOf="@+id/addContactButton"
        android:layout_toStartOf="@+id/addContactButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Sugar (mg/dL)"
        android:id="@+id/TargetTextView"
        android:layout_above="@+id/addTargetSugarButton"
        android:layout_alignLeft="@+id/contactView"
        android:layout_alignStart="@+id/contactView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="7"
        android:id="@+id/targetSugarField"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/contactView"
        android:layout_alignRight="@+id/contactTextView"
        android:layout_alignEnd="@+id/contactTextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“"
        android:id="@+id/addTargetSugarButton"
        android:layout_alignBottom="@+id/targetSugarField"
        android:layout_toRightOf="@+id/targetSugarField"
        android:layout_toEndOf="@+id/targetSugarField"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="35dp" />

</RelativeLayout>
